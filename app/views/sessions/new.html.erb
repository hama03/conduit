<% provide(:title, 'Sign in') %>

<div class="auth-page">
  <div class="container page">
    <div class="row">
      <div class="col-md-6 offset-md-3 col-xs-12">
        <h1 class="text-xs-center">Sign in</h1>
        <p class="text-xs-center">
          <a href="/register">Need an account?</a>
        </p>

        <% if flash.any? %>
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>">
              The form contains 1 error. 
            </div>
             <ul class="error-messages">
                <li><%= message %></li>
              </ul>
          <% end %>
        <% end %>

        <%= form_with(url: login_path, scope: :session) do |f| %>
          <fieldset class="form-group">
            <%= f.email_field :email, :placeholder => 'Email' , class: 'form-control form-control-lg' %>
          </fieldset>

          <fieldset class="form-group">
            <%= f.password_field :password, :placeholder => 'Password' , class: 'form-control form-control-lg' %>
          </fieldset>

          <%= f.label :remember_me, class: "checkbox inline" do %>
            <div class="inner-checkbox">
              <%= f.check_box :remember_me %>
              <span>Remember me on this computer</span>
            </div>
          <% end %>
    
          <%= f.submit "Sign in", class: "btn btn-lg btn-primary pull-xs-right" %>
        <% end %>

      </div>
    </div>
  </div>
</div>